#!/bin/bash

function my-notify ()
{
    if [ $DISPLAY ]; then
        notify "$1" "$2" "$3"
    fi
}

if [ $# -ne 1 ]; then
    echo "Usage: $0 <build-directory>"
    exit 1
fi

PROJ="${1}"
cd "${PROJ}"

make -j$(nproc) > /dev/null

if [ $? -eq 0 ]; then
    my-notify "${PROJ}" "compiled successfully" 1
    exit 0
else
    my-notify "${PROJ}" "compiled unsuccessfully" 2
    exit 1
fi
