#!/usr/bin/env python

import os
import sys

infile = sys.argv[1]
infileBase = os.path.basename (infile)
infileDir = os.path.dirname (infile)

splitted = infileBase.split ('.')[0:-1]
if (len (splitted) == 0) or (len (splitted) == 1 and splitted[0] == ''):
    print os.path.join (infileDir, infileBase)
else:
    print os.path.join (infileDir, '.'.join (infileBase.split ('.')[0:-1]))
