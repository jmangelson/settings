#!/usr/bin/env python

import os
import sys
import commands
from random import randint

COWPATH = os.getenv('COWPATH')
if COWPATH is None:
    COWPATH = '/usr/share/cowsay/cows/'

def main():
    cows = os.listdir(COWPATH)
    cow = cows[randint(0, len(cows)-1)]
    text = commands.getoutput('/usr/games/fortune -a | /usr/games/cowsay -f ' + cow)
    print text
    return 0

if __name__ == '__main__':
    sys.exit(main())
